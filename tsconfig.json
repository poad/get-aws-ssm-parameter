{
  "ts-node": {
    "swc": true,
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc-experimental"
  },
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "esnext",
      "DOM"
    ],
    "strict": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true
  },
  "exclude": ["node_modules", "**/*.test.ts", "__tests__/**", "vite.config.ts"]
}
